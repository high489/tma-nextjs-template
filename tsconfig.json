{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],

      "@public*": ["./public/*"],
      "@src*": ["./src/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@providers": ["./src/providers"],
      "@providers/*": ["./src/providers/*"],
      "@i18n": ["./src/providers/i18n"],
      "@i18n/*": ["./src/providers/i18n/*"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@models": ["./src/models"],
      "@models/*": ["./src/models/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
    },
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "global.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}